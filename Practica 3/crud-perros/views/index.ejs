<!DOCTYPE html>
<html lang="es">
<head>
    <title>Libros</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h1>Libros</h1>
    <a href="/perros/nuevo" class="btn btn-primary mb-3">Agregar Libro</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Anio de Publicacion</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% perros.forEach(perro => { %>
                <tr>
                    <td><%= perro.id %></td>
                    <td><%= perro.nombre %></td>
                    <td><%= perro.raza %></td>
                    <td><%= perro.edad %></td>
                    <td>
                        <a href="/perros/editar/<%= perro.id %>" class="btn btn-warning">Editar</a>
                       

                        <form action="/perros/borrar/<%= perro.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>

                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>